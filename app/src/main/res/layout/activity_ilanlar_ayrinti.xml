            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView60"/>
    <TextView
            android:text="Tanımı"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView62" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView61" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/myColor"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="0dp"
            android:layout_height="131dp"
            android:id="@+id/tvTanimi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView62"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textStyle="bold"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.133" android:fontFamily="serif-monospace"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Nitelikler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView64" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTanimi" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/colorRefinementCount"/>
    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
