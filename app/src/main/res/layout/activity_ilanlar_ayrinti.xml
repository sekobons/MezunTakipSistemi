<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IlanlarAyrintiActivity">

    <com.example.mezuntakipsistemi.MyTextView
            android:text="Firma Adı :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView57" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Pozisyon :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView58" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView57"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Çalışma Şekli :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView59" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView58"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Askerlik Durumu :"
            android:layout_width="wrap_content"
