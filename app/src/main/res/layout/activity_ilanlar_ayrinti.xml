    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvFirmaAdAyrinti" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView58"
            app:layout_constraintStart_toEndOf="@+id/textView57" android:layout_marginStart="8dp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPozisyonAyrinti" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView58" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvFirmaAdAyrinti"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView58"
            app:layout_constraintHorizontal_bias="0.522" app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCalismaAyrinti" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView59" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvPozisyonAyrinti"
            app:layout_constraintHorizontal_bias="0.468" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView59" app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAskerlikAyrinti" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView60" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvCalismaAyrinti"
            app:layout_constraintHorizontal_bias="0.422" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView60" app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEgitimAyrinti" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView61" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvAskerlikAyrinti"
            app:layout_constraintHorizontal_bias="0.447" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView61" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>