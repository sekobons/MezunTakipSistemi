<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragment.EgitimBilgileriFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="704dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:orientation="vertical" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <com.example.mezuntakipsistemi.MyTextView
                android:text="Bölümünüz :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                android:textSize="14sp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/spinnerBolumO" app:layout_constraintHorizontal_bias="0.019"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Eğitim ve İş Bilgileri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.465"
                android:layout_marginTop="92dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etDiplomaNotu"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etMezuniyet" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView9"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Çalışma Durumu :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toStartOf="@+id/RadioGrupCalisma" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.354"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Okula giriş yılı :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                app:layout_constraintEnd_toStartOf="@+id/etGirisYili"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etGirisYili"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RadioGrupOgretim"
                app:layout_constraintBottom_toBottomOf="@+id/textView14" android:layout_marginTop="4dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etMezuniyet"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etGirisYili"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Diploma Notu :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                app:layout_constraintEnd_toStartOf="@+id/etDiplomaNotu" android:layout_marginEnd="72dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintHorizontal_bias="0.128"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Öğretim Türü :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toStartOf="@+id/RadioGrupOgretim" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.017" android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"/>
        <Button
                android:text="Kaydet"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnKaydet" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Mezuniyet Yılı :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:layout_constraintEnd_toStartOf="@+id/etMezuniyet"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="0.0"/>
        <RadioGroup
                android:layout_width="136dp"
                android:layout_height="52dp"

                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
                android:id="@+id/RadioGrupOgretim"
                android:checkedButton="@+id/radio1ogretim"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerBolumO">
            <RadioButton
                    android:text="1.Öğretim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radio1ogretim" android:layout_weight="1"/>
            <RadioButton
                    android:text="2.Öğretim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radio2ogretim" android:layout_weight="1"/>
        </RadioGroup>
        <RadioGroup
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etDiplomaNotu" android:id="@+id/RadioGrupCalisma"
                android:checkedButton="@+id/radioCalismiyorum" app:layout_constraintBottom_toBottomOf="@+id/textView17">
            <RadioButton
                    android:text="Çalışıyorum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioCalisiyorum" android:layout_weight="1"/>
            <RadioButton
                    android:text="Çalışmıyorum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioCalismiyorum" android:layout_weight="1"/>
        </RadioGroup>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerBolumO" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="68dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
        <com.example.mezuntakipsistemi.MyTextView
                android:text="Lisans Türü :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:layout_constraintEnd_toStartOf="@+id/spinnerLisansTuru"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerLisansTuru"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/RadioGrupCalisma" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="76dp" app:layout_constraintVertical_bias="0.0"
                android:entries="@array/LisansTurleri"/>
        <Spinner
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerEgitimSayisi" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RadioGrupCalisma"
                android:entries="@array/EgitimSayilari" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerLisansTuru"
                app:layout_constraintVertical_bias="0.375"/>
        <TextView
                android:text="Eğitim Sayısı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView43" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etDiplomaNotu"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/spinnerEgitimSayisi"
                app:layout_constraintVertical_bias="1.0"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGiris1"
                app:layout_constraintStart_toStartOf="parent"
                android:entries="@array/LisansYil"
                app:layout_constraintTop_toBottomOf="@+id/textView50"
                app:layout_constraintEnd_toStartOf="@+id/spinnerCikis1" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.973"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCikis1" app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/LisansYil"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView69"
                android:layout_marginEnd="4dp"/>
        <TextView
                android:text="Giriş Yılı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView50"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru"
                app:layout_constraintEnd_toStartOf="@+id/textView69" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.631"/>
        <TextView
                android:text="Bitiş Yılı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView69" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerEgitimSayisi"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/spinnerLisansTuru2" android:entries="@array/LisansTurleri"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerGiris1" app:layout_constraintHorizontal_bias="0.655"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/spinnerLisansTuru3" android:entries="@array/LisansTurleri"
                app:layout_constraintHorizontal_bias="0.655" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerGiris2"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/spinnerLisansTuru4" android:entries="@array/LisansTurleri"
                app:layout_constraintHorizontal_bias="0.641"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerGiris3"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGiris2" android:entries="@array/LisansYil"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru2"
                app:layout_constraintEnd_toStartOf="@+id/spinnerCikis2" android:layout_marginEnd="8dp"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGiris3" android:entries="@array/LisansYil"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru3"
                app:layout_constraintEnd_toStartOf="@+id/spinnerCikis3" android:layout_marginEnd="8dp"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGiris4" android:entries="@array/LisansYil"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru4"
                app:layout_constraintEnd_toStartOf="@+id/spinnerCikis4" android:layout_marginEnd="8dp"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCikis2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru2"
                android:entries="@array/LisansYil"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCikis3" app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/LisansYil" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru3" android:layout_marginEnd="4dp"/>
        <Spinner
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCikis4" app:layout_constraintEnd_toEndOf="parent"
                android:entries="@array/LisansYil"
                android:layout_marginEnd="4dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLisansTuru4"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>