<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myColor2"
        tools:context=".YoneticiActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etEklenecekBolum" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Eklenecek Bölüm Adı.."
            app:layout_constraintHorizontal_bias="0.45" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnYeniEkle" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvYoneticiUnvan" app:layout_constraintVertical_bias="0.956"/>
    <Button
            android:text="Ekle"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:id="@+id/btnYeniEkle" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.443"
            android:backgroundTint="@color/myColor5" android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCik"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Yönetici Bilgileri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView72" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Ad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView73" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView72" android:textSize="16sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYoneticiAd" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView73" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView72"
            app:layout_constraintHorizontal_bias="0.337" android:text="Addd" android:textSize="16sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Soyad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView75" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView73" android:textSize="16sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Soyadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYoneticiSoyad" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvYoneticiAd"
            app:layout_constraintStart_toEndOf="@+id/textView75" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.292" android:textSize="16sp"/>
    <Button
            android:text="Çıkış"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCik"
            android:backgroundTint="@color/colorSuggestions" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.455"/>
    <TextView
            android:text="Ünvan:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView86" android:textSize="16sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView75"/>
    <TextView
            android:text="Unvan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYoneticiUnvan" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView86" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvYoneticiSoyad"
            app:layout_constraintHorizontal_bias="0.285" android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>