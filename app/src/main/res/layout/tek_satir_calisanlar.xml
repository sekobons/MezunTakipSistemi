<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <com.example.mezuntakipsistemi.MyTextView
            android:text="İsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCalisanIsım" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="12sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Yetenek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCalisanYetenek" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCalisanIsım" android:layout_marginStart="60dp"
            android:textStyle="bold" android:textSize="12sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="süresi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/tvCalisanSure"
            app:layout_constraintStart_toEndOf="@+id/tvCalisanYetenek" android:layout_marginStart="48dp"
            android:textStyle="bold" android:textSize="12sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="calisiyor mu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvCalisanCalisiyormu" app:layout_constraintStart_toEndOf="@+id/tvCalisanSure"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.369"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="12sp"/>
</android.support.constraint.ConstraintLayout>