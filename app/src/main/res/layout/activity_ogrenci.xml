<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/myColor2"
        android:layout_height="match_parent"
        tools:context=".OgrenciActivity">

    <com.example.mezuntakipsistemi.MyTextView
            android:text="Arama Kriteri"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/textView41" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Giriş Yılı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView45" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView41"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView47" android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerGirisYili" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView45"
            android:entries="@array/Yillar"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Bölüm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView47" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView41"/>
    <Button
            android:text="Listele"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/btnOgrenciListele" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.547" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerYetenekOgrenci"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="284dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/ogrenciRecy" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView53" app:layout_constraintVertical_bias="0.04"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Ad-Soyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView51" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOgrenciListele"
            android:textColor="@color/colorRefinementCount" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Öğretim Türü"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView52" app:layout_constraintStart_toEndOf="@+id/textView51"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOgrenciListele"
            android:textColor="@color/colorRefinementCount" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Giriş Yılı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView53" app:layout_constraintStart_toEndOf="@+id/textView52"
            android:layout_marginStart="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOgrenciListele"
            android:textColor="@color/colorRefinementCount" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Mezuniyet Yılı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView54" app:layout_constraintStart_toEndOf="@+id/textView53"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnOgrenciListele"
            android:textColor="@color/colorRefinementCount" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBulunamadi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOgrenciListele" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerYetenekOgrenci"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView30" android:entries="@array/Yetenekler"
            app:layout_constraintEnd_toStartOf="@+id/btnOgrenciListele" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.333"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Yetenek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:id="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/spinnerBolumSec" android:layout_marginTop="4dp"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerBolumSec" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView47" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>