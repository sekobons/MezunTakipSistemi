<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/myColor6"
        android:layout_height="match_parent"
        tools:context=".IsilanlariActivity">

    <Button
            android:text="İş ilanı ekle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIlanEkle" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="330dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/ilanlarRecy" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIlanEkle" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.24"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Firma Adı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView49" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/ilanlarRecy"
            android:textStyle="bold" android:fontFamily="sans-serif-black" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Pozisyon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView55" app:layout_constraintStart_toEndOf="@+id/textView49"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/ilanlarRecy"
            android:textStyle="bold" android:fontFamily="sans-serif-black" android:visibility="invisible"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="İlan Tarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView56" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView55" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.384"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/ilanlarRecy"
            android:textStyle="bold" android:textSize="14sp" android:fontFamily="sans-serif-black"
            android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>