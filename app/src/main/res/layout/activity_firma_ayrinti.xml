<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myColor2"
        tools:context=".FirmaAyrintiActivity">

    <com.example.mezuntakipsistemi.MyTextView
            android:text="Firma Adı :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFirmaAdiA" app:layout_constraintStart_toEndOf="@+id/textView31"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.152" android:textSize="18sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView31" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Bulunduğu Şehir :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView42" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView31" android:textSize="14sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSehirA" app:layout_constraintStart_toEndOf="@+id/textView42"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvFirmaAdiA"
            app:layout_constraintHorizontal_bias="0.079" android:textSize="18sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView42" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Sektör :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView42" android:textSize="18sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSektorA" app:layout_constraintStart_toEndOf="@+id/textView44"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSehirA" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.22" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView44" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Telefon No :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView44" android:textSize="18sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelNoA" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSektorA"
            app:layout_constraintStart_toEndOf="@+id/textView46" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.123" android:layout_marginTop="8dp" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView46" android:textStyle="bold"
            app:layout_constraintVertical_bias="1.0"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:text="Web Site :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView48" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView46" android:textSize="18sp"/>
    <com.example.mezuntakipsistemi.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWebSiteA" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTelNoA" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView48"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.172" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView48" android:textStyle="bold"/>
    <Button
            android:text="Haritadaki yerini göster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnYerGoster" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.424"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="Çalışmış"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calismisCheck" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tvWebSiteA"
            android:clickable="false"/>
    <CheckBox
            android:text="Halen Çalışıyor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calisiyorCheck" app:layout_constraintStart_toEndOf="@+id/calismisCheck"
            android:layout_marginStart="12dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWebSiteA" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="297dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calisiyorCheck"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnYerGoster"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.096"
            android:id="@+id/calismislarRecy"/>
</android.support.constraint.ConstraintLayout>