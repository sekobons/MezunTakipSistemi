<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MesajlarMesajYazActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/mesajlarAyrintiRecy"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/etMesajYaz"
            app:layout_constraintVertical_bias="0.055"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etMesajYaz" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Mesaj Yazin.."
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imgMesajGonder"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
    />
    <ImageView
            android:layout_width="77dp"
            android:layout_height="65dp" app:srcCompat="@drawable/ic_action_arrow_right"
            android:id="@+id/imgMesajGonder" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="@+id/etMesajYaz"
            app:layout_constraintVertical_bias="0.4"
    />
</android.support.constraint.ConstraintLayout>