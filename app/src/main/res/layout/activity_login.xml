<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myColor6"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etMail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.412"
            android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/etSifre" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etMail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.385"
            android:hint="Şifre"/>
    <Button
            android:text="Mezun Giriş"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnGiris" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.44"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etSifre"
            app:layout_constraintVertical_bias="0.081" android:backgroundTint="@color/myColor5"/>
    <Button
            android:text="Yönetici Girişi"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnYoneticiGiris" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.462" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGiris" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.501"
            android:background="@color/myColor5"/>
</android.support.constraint.ConstraintLayout>